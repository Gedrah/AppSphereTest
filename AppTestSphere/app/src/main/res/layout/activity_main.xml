<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.aziaka.donavan.apptestsphere.MainActivity">
    <fragment android:name="com.aziaka.donavan.apptestsphere.AuthFragment"
                 android:id="@+id/auth_fragment"
                 android:layout_weight="2"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 tools:layout="@layout/fragment_auth"/>
    <FrameLayout android:name="com.aziaka.donavan.apptestsphere.AuthFragment"
              android:id="@+id/detail_fragment"
              android:layout_weight="2"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:layout="@layout/fragment_detail"/>
</FrameLayout>
