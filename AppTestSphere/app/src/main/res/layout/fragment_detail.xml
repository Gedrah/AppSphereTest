<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
             android:id="@+id/detail_fragment"
             android:background="@color/colorPrimaryDark"
             tools:context="com.aziaka.donavan.apptestsphere.DetailFragment">
   <android.support.design.widget.TabLayout
            android:layout_width="match_parent"
            android:id="@+id/tabs"
            android:background="@color/colorAccent"
            app:tabIndicatorColor="@color/colorTab"
            android:layout_height="wrap_content">
        <android.support.design.widget.TabItem
                android:id="@+id/degree_tab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_degree"/>
        <android.support.design.widget.TabItem
                android:id="@+id/fahr_tab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_fahren"/>
        <android.support.design.widget.TabItem
                android:id="@+id/kon_tab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_kelvin"/>
    </android.support.design.widget.TabLayout>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/ic_launcher"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/tabs"
            android:paddingTop="50dp"
            android:scaleX="2"
            android:scaleY="2"
            android:id="@+id/imageView"/>
    <TextView
            android:id="@+id/name_info"
            android:textSize="30dp"
            android:layout_above="@+id/city_infos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerHorizontal="true"
            android:paddingLeft="50dp"
            android:hint="Bonjour"/>
    <TextView
            android:id="@+id/city_infos"
            android:hint="à"
            android:textSize="30dp"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="50dp"
            android:layout_centerInParent="true"/>
    <TextView
            android:id="@+id/weather_info"
            android:layout_below="@+id/city_infos"
            android:layout_alignParentLeft="true"
            android:textSize="25dp"
            android:layout_centerHorizontal="true"
            android:hint="il fait très chaud:"
            android:paddingLeft="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <TextView
            android:id="@+id/nbr_data"
            android:text="42°C"
            android:textSize="70dp"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Bonjour"
            android:layout_marginBottom="64dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"/>
</RelativeLayout>
